<%= @user.name %>, <%= @user.email %>

<p id="notice"><%= notice %></p>

<% p @user %>
<table>
  <tr>
    <td>

      <%= image_tag @user.image_url(:thumb) if @user.image? %>

    </td>

  </tr>
  <tr>
    <td>Name:</td>
    <td>  <%= @user.name %></td>
  </tr>
  <tr>
    <td>Email:</td>
    <td> <%= @user.email %></td>
  </tr>

  <tr>
    <td>Created at:</td>
    <td> <%= @user.created_at %></td>
  </tr>


</table>


<%= link_to 'Edit', edit_user_path(@user) %> |
