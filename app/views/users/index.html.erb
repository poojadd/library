<% if @users.blank? %>
    <p>There are not any books currently in the system.</p>
<% end %>
<h1>Listing Users</h1>


<table >
  <tr>

    <th>Title</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>


  <% @users.each do |user| %>

      <tr>

        <td><%= user.name %> </td>
        <td><%= user.email %></td>
        <td> <%= link_to 'Show', user  %></td>
        <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>

      </tr>
  <% end %>
</table>


<br />
<div class="digg_pagination">
<%= will_paginate @users %>
</div>