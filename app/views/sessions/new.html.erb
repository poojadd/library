<h1> Sign in </h1>

<%= form_for(@session) do |f| %>
    <% if @session.errors.any? %>
        <div id="error_explanation">
         <ul>
            <% @session.errors.full_messages.each do |m| %>
                <li><%= m %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <% if @msg != nil && @msg != "" %>
        <div id="error">
          <ul>
            <li><%= @msg %></li>

          </ul>

        </div>
    <% end %>

    <table>
      <tr>
        <td> <%= f.label :email %> </td>
        <td>  <%= f.text_field :email %>      </td>
      </tr>
      <tr>
        <td><%= f.label :password %>  </td>
        <td>
      <%= f.password_field :password %>   </td>
      </tr>
      <tr>
        <td>
      <%= check_box_tag :remember_me, 1, params[:remember_me] %>     </td>
      <td>
      <%= label_tag :remember_me %>     </td>
      </tr>
      <tr>
        <td colspan="2" >
      <%= f.submit %>        </td>
      </tr>
      <tr>
        <td colspan="2"><p><%= link_to "forgotten password?", new_password_reset_path %></p></td>

      </tr>
    </table>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
